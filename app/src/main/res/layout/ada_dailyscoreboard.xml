<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:paddingTop="16dp"
    android:background="#dddddd"
    android:orientation="horizontal"
    android:id="@+id/dailyscoreboardLayout">

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_vimgResId"
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:gravity="bottom"
            android:layout_height="82dp"
            app:srcCompat="@mipmap/gsw" />

        <TextView
            android:id="@+id/tv_vteam"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:gravity="center"
            android:text="Vteam" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vwin"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="57" />

            <TextView
                android:id="@+id/tv_dv"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center"
                android:text="-" />

            <TextView
                android:id="@+id/tv_vloss"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="25" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_vscore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textSize="32dp"
            android:gravity="left|center"
            android:text="106" />

        <TextView
            android:id="@+id/tv_final"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10dp"
            android:gravity="center"
            android:text="終場" />

        <TextView
            android:id="@+id/tv_hscore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:textSize="32dp"
            android:gravity="right|center"
            android:text="105" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_himgResId"
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:gravity="bottom"
            android:layout_height="82dp"
            app:srcCompat="@mipmap/tor" />

        <TextView
            android:id="@+id/tv_hteam"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:gravity="center"
            android:text="Hteam" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hwin"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="58" />

            <TextView
                android:id="@+id/tv_dh"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top|center"
                android:text="-" />

            <TextView
                android:id="@+id/tv_hloss"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
