<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_showBarEWAsa"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#1568b8"
        android:gravity="center"
        android:text="西部聯盟"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_showBarTeamAsa"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="球隊"
            style="@style/adaStandingsShowBar"/>

        <TextView
            android:id="@+id/tv_showBarWinAsa"
            android:layout_width="40dp"
            android:text="勝"
            style="@style/adaStandingsShowBar"/>

        <TextView
            android:id="@+id/tv_showBarLossAsa"
            android:layout_width="40dp"
            android:text="負"
            style="@style/adaStandingsShowBar"/>

        <TextView
            android:id="@+id/tv_showBarPerAsa"
            android:layout_width="64dp"
            android:text="勝率"
            style="@style/adaStandingsShowBar"/>

        <TextView
            android:id="@+id/tv_showBarGbAsa"
            android:layout_width="40dp"
            android:text="勝差"
            style="@style/adaStandingsShowBar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_showBarRankingAsaRe"
            android:layout_width="16dp"
            android:paddingLeft="2dp"
            android:text="12"
            style="@style/adaStandingsRow"/>

        <ImageView
            android:id="@+id/img_showBarLogoAsaRe"
            android:layout_width="48dp"
            android:padding="6dp"
            style="@style/adaStandingsRow"/>

        <TextView
            android:id="@+id/tv_showBarTeamAsaRe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Bucks"/>

        <TextView
            android:id="@+id/tv_showBarWinAsaRe"
            android:layout_width="40dp"
            android:text="60"
            style="@style/adaStandingsRow"/>

        <TextView
            android:id="@+id/tv_showBarLossAsaRe"
            android:layout_width="40dp"
            android:text="22"
            style="@style/adaStandingsRow"/>

        <TextView
            android:id="@+id/tv_showBarPerAsaRe"
            android:layout_width="64dp"
            android:text="0.732"
            style="@style/adaStandingsRow"/>

        <TextView
            android:id="@+id/tv_showBarGbAsaRe"
            android:layout_width="40dp"
            android:text="12"
            style="@style/adaStandingsRow"/>
    </LinearLayout>
</LinearLayout>
