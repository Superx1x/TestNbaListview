<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="384dp"
    android:paddingTop="8dp"
    android:background="#dddddd"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_reportTime"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/newsdate"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text="7月21日" />

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="348dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/newsoutter"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_newsLeftT"
                android:layout_width="171dp"
                android:layout_height="171dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/newsinner"
                app:srcCompat="@mipmap/newsone" />

            <TextView
                android:id="@+id/tv_newsLeftT"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_newsLeftT"
                android:layout_alignLeft="@id/img_newsLeftT"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowRadius="15"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="續留暴龍可能性大增？雷納德代言加拿大航運公司" />

            <ImageView
                android:id="@+id/img_newsRightT"
                android:layout_width="171dp"
                android:layout_height="171dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/newsinner"
                app:srcCompat="@mipmap/newstwo" />

            <TextView
                android:id="@+id/tv_newsRightT"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_newsRightT"
                android:layout_alignRight="@id/img_newsRightT"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowRadius="15"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="續留暴龍可能性大增？雷納德代言加拿大航運公司" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_newsLeftB"
                android:layout_width="171dp"
                android:layout_height="171dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/newsinner"
                app:srcCompat="@mipmap/newsthree" />

            <TextView
                android:id="@+id/tv_newsLeftB"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_newsLeftB"
                android:layout_alignLeft="@id/img_newsLeftB"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowRadius="15"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="續留暴龍可能性大增？雷納德代言加拿大航運公司" />

            <ImageView
                android:id="@+id/img_newsRightB"
                android:layout_width="171dp"
                android:layout_height="171dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/newsinner"
                app:srcCompat="@mipmap/newsfour" />

            <TextView
                android:id="@+id/tv_newsRightB"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_newsRightB"
                android:layout_alignRight="@id/img_newsRightB"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowRadius="15"
                android:shadowDx="2"
                android:shadowDy="2"
                android:text="續留暴龍可能性大增？雷納德代言加拿大航運公司" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
